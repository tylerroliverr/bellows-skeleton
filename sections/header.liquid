{{ 'header.css' | asset_url | stylesheet_tag }}

<header>
  <h2 class="header__title">
    {{ shop.name | link_to: routes.root_url }}
    {% comment %} ADD LOGO HERE ^ REMOVE THIS LINE OF CODE - DON'T FORGET TO RE-LINK TO HOMEPAGE {% endcomment %}
  </h2>

  <p class="menu-toggle" aria-label="Open Menu">Menu</p>
  <a class="cart-button" href="{{ routes.cart_url }}">
    Cart{% if cart.item_count > 0 %} ({{ cart.item_count }}){% endif %}
  </a>

  <div class="menu-overlay" id="menuOverlay">
    <p class="menu-close" aria-label="Close Menu">Close</p>
    <nav class="menu-nav">
      {% for link in section.settings.navigation.links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
      {% if shop.customer_accounts_enabled %}
        <a href="{{ routes.account_url }}">My Account</a>
      {% endif %}
      <a class="cart-button" href="{{ routes.cart_url }}">
        Cart{% if cart.item_count > 0 %} ({{ cart.item_count }}){% endif %}
      </a>
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const menuToggle = document.querySelector('.menu-toggle');
    const menuOverlay = document.getElementById('menuOverlay');
    const menuClose = document.querySelector('.menu-close');

    menuToggle.addEventListener('click', () => {
      menuOverlay.classList.add('active');
    });

    menuClose.addEventListener('click', () => {
      menuOverlay.classList.remove('active');
    });
  });
</script>

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "navigation",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
