{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

{{ 'collection.css' | asset_url | stylesheet_tag }}

<h1>{{ collection.title }}</h1>
<p>Filters go here</p>

<div class="collection-products">
  {% for product in collection.products %}
    <a href="{{ product.url }}" target="_self">
      <div class="product-container">
        {% assign first_image = product.media | first %}
        {% assign second_image = product.media[1] %}

        <div class="product-image-container">
          {% if first_image %}
            <img
              src="{{ first_image.src | image_url }}"
              alt="{{ product.title }}"
              class="product-image product-image--primary"
              width="auto"
              height="auto"
            >
          {% endif %}

          {% if second_image %}
            <img
              src="{{ second_image.src | image_url }}"
              alt="{{ product.title }}"
              class="product-image product-image--secondary"
              width="auto"
              height="auto"
            >
          {% endif %}
        </div>
        <div class="product-brand">
          <p>metafield brand</p>
        </div>
        <div class="product-title">
          {{ product.title }}
        </div>
        <div class="product-price">
          {{ cart.currency.iso_code }}
          {{ product.price | money }}
        </div>
      </div>
    </a>
  {% endfor %}
</div>

{% schema %}
{
  "name": "t:general.collection",
  "settings": []
}
{% endschema %}
