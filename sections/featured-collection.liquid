{{ 'featured-collection.css' | asset_url | stylesheet_tag }}

<section class="featured-colleciton-section">
  <h2>{{ section.settings.heading }}</h2>

  <div class="collection-button-wrapper">
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}
      {% if collection %}
        <a href="{{ collection.url }}" target="_self">
          <div class="collection-button">
            {{ collection.title }}
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>

  <div class="featured-collection-wrapper">
    {% for product in collections.frontpage.products %}
      <a href="{{ product.url }}" target="_self">
        <div class="product-container">
          {% assign first_image = product.media | first %}
          {% assign second_image = product.media[1] %}

          <div class="product-image-container">
            {% if product.metafields.custom.product_badge %}
              <div class="product-badge">
                {{ product.metafields.custom.product_badge | metafield_tag }}
              </div>
            {% endif %}
            {% if first_image %}
              <img
                src="{{ first_image.src | image_url }}"
                alt="{{ product.title }}"
                class="product-image product-image--primary"
                width="auto"
                height="auto"
              >
            {% endif %}

            {% if second_image %}
              <img
                src="{{ second_image.src | image_url }}"
                alt="{{ product.title }}"
                class="product-image product-image--secondary"
                width="auto"
                height="auto"
              >
            {% endif %}
          </div>
          <div class="product-brand">
            {{ product.vendor }}
          </div>
          <div class="product-title">
            {{ product.title }}
          </div>
          <div class="product-price">
            {{ cart.currency.iso_code }}
            {{ product.price | money }}
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "featured-collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop Products"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collection",
      "category": "Homepage",
      "blocks": []
    }
  ]
}
{% endschema %}
